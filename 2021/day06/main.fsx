let step =
  List.collect (fun (timer, count) -> if timer = 0 then [6, count; 8, count] else [timer - 1, count])
  >> List.groupBy fst
  >> List.map (fun (timer, group) -> timer, List.sumBy snd group)

let run days =
  let initMap = input |> Seq.countBy id |> Seq.map (fun (timer, count) -> timer, bigint count) |> List.ofSeq
  seq {1..days}
  |> Seq.fold (fun map _ -> step map) initMap
  |> List.sumBy snd

